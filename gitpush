  people_emoji=("ğŸ˜„" "ğŸ˜†" "ğŸ˜Š" "ğŸ˜ƒ" "â˜ºï¸" "ğŸ˜" "ğŸ˜" "ğŸ˜˜" "ğŸ˜š" "ğŸ˜³" "ğŸ˜Œ" "ğŸ˜†"
  "ğŸ˜" "ğŸ˜‰" "ğŸ˜œ" "ğŸ˜" "ğŸ˜€" "ğŸ˜—" "ğŸ˜™" "ğŸ˜›" "ğŸ˜´" "ğŸ˜Ÿ" "ğŸ˜¦" "ğŸ˜§" "ğŸ˜®" "ğŸ˜¬"
  "ğŸ˜•" "ğŸ˜¯" "ğŸ˜‘")
  emoji=${people_emoji[$RANDOM % ${#people_emoji[@]}]}
}

nature_emoji_select () {
  nature_emoji=("â˜€ï¸" "â˜”ï¸" "â˜ï¸" "â„ï¸" "â›„ï¸" "âš¡ï¸" "ğŸŒ€" "ğŸŒ" "ğŸŒŠ" "ğŸ±" "ğŸ¶" "ğŸ­"
  "ğŸ¹" "ğŸ°" "ğŸº" "ğŸ¸" "ğŸ¯" "ğŸ¨" "ğŸ»" "ğŸ·" "ğŸ½")
  emoji=${nature_emoji[$RANDOM % ${#nature_emoji[@]}]}
}

objects_emoji_select () {
  objects_emoji=("ğŸ" "ğŸ’" "ğŸ" "ğŸ’" "ğŸ“" "ğŸ" "ğŸ†" "ğŸ‡" "ğŸ" "ğŸ‘" "ğŸƒ" "ğŸ‘»"
  "ğŸ…" "ğŸ„" "ğŸ" "ğŸ””")
  emoji=${objects_emoji[$RANDOM % ${#objects_emoji[@]}]}
}

places_emoji_select () {
  places_emoji=("ğŸ " "ğŸ¡" "ğŸ«" "ğŸ¢" "ğŸ£" "ğŸ¥" "ğŸ¦" "ğŸª" "ğŸ©" "ğŸ¨" "ğŸ’’" "â›ªï¸")
  emoji=${places_emoji[$RANDOM % ${#places_emoji[@]}]}
}

symbols_emoji_select () {
  symbols_emoji=("ğŸ’²" "Â©ï¸" "Â®ï¸" "â„¢ï¸" "âŒ" "â—ï¸" "â€¼ï¸" "â‰ï¸" "â­•ï¸" "âœ–ï¸" "â•" "â–" "â—"
  "ğŸ’®" "ğŸ’¯" "âœ”ï¸" "â˜‘ï¸" "ğŸ”˜" "ğŸ”—" "â°" "ã€°ï¸" "ã€½ï¸" "ğŸ”±" "âœ…" "ğŸ”²" "ğŸ”³" "âš«ï¸"
  "âšªï¸" "ğŸ”´" "ğŸ”µ" "ğŸ”·" "ğŸ”¶" "ğŸ”¹" "ğŸ”¸" "ğŸ”º" "ğŸ”»")
  emoji=${symbols_emoji[$RANDOM % ${#symbols_emoji[@]}]}
}

case $1 in
  --no-emoji|-ne)
  echo -e "===== run with no emoji added ====="
  username_get
  remote_get
  git_push
  ;;
  '')
  echo -e "===== default run with no options, random emoji will be in comment :) ====="
  emoji_category_select
  echo -e "selected emoji category:\e[33m $category_emoji_select\e[0m"
  "$category_emoji_select"
  echo -e "selected emoji:\e[33m $emoji\e[0m"
#  people_emoji_select
  username_get
  remote_get
  git_push
  ;;
  *)
  echo -e "\e[91m bad option:\e[33m $1\e[0m ... run with no option or brak with Ctrl+c ..."
  $0
  exit
  ;;
esac
